<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quizPrimary"
    tools:context=".QuizLayout">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:orientation="vertical"
        android:background="@drawable/quiz_page_background"
        tools:ignore="MissingConstraints">



        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:background="@drawable/spashimg" />

        <TextView
            android:id="@+id/total_question"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Questions 1 "
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="#A89595"
            />
        <TextView
            android:id="@+id/questions"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_80sdp"
            android:text="Question which we Going To Ask ?"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            />


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button1"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/linearlayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:backgroundTint="@color/white"
        android:text="Option 1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/Button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        android:text="Option 2"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button3"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/Button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        android:text="Option 3"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button4"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/Button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        android:text="Option 4"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SubmitButton"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@id/Button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="#673AB7"
        android:text="Next"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        />





</androidx.constraintlayout.widget.ConstraintLayout>