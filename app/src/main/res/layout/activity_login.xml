<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A5AE0"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="12dp"
        android:background="@drawable/spashimg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearlayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_150sdp"


        />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/personimage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearlayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_524sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_328sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/login_and_signup_background"
       >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            />


        <!--        E-Mail-->

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            android:background="@drawable/forget"
            >
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@drawable/emailvector"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/login_email"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            android:background="@drawable/forget"
            >
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@drawable/passvector"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/login_password"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:hint="Password"
                android:inputType="textWebPassword"
                android:textSize="@dimen/_17sdp"
                android:layout_gravity="center"
                android:textStyle="bold"

                />
        </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="@dimen/_30sdp"
     android:orientation="horizontal"
     android:layout_gravity="center"
     android:gravity="end"
     android:layout_marginRight="@dimen/_10sdp"
     android:layout_marginTop="@dimen/_10sdp"
     >

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/_15sdp"
         android:gravity="center"
         android:text="New to Quiz?"
         android:textStyle="bold"
         android:layout_gravity="center"
         android:layout_marginLeft="@dimen/_15sdp"

         />

     <TextView
         android:id="@+id/toSignUp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/_15sdp"
         android:gravity="end"
         android:text="  Register?"
         android:textStyle="bold"
         android:layout_gravity="center"
         android:textColor="@color/quizPrimary"

         />

 </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:text="Login"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="@color/white"
            />




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>